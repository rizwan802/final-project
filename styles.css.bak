/* Global styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

/* Hero Section */
.hero {
    background-image: url('restaurant-hero.jpg'); /* Replace with your image path */
    background-size: cover;
    background-position: center;
    height: 65vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: black;
    padding: 20px;
}

.hero h1 {
    font-size: 55px;
    margin-bottom: 10px;
}

.hero p {
    font-size: 24px;
    margin-bottom: 20px;
	text-align: center;
}

.cta-button {
    background-color: red;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.cta-button:hover {
    background-color: yellow;
}

/* Menu Section */
.menu {
    padding: 40px 20px;
    background-color: #f4f4f4;
    text-align: center;
}

.menu h2 {
    font-size: 40px;
    padding-bottom: 30px;
}

.menu-items {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.menu-item {
    background-color: white;
    border-radius: 10px;
    
    width: 350px;
    box-shadow: 0 6px 6px rgb(0, 0, 0.7);
    text-align: center;
    transition: transform 0.3s ease;
	padding:15px;
	
}

.menu-item:hover {
    transform: translateY(13px);
}

.menu-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
	border-radius: 10px;
}

.menu-item h3 {
    font-size: 1.5rem;
    margin: 15px 0 10px;
	text-align: ju
}

.menu-item p {
    font-size: 1rem;
    color: #666;
    padding: 0 10px 20px;
	text-align:justify;
}

/* About Section */
.about {
    display: flex;s
    justify-content: center;
    align-items: center;
    padding: 40px 25px;
}

.about-content {
    display: flex;
    gap: 30px;
}

.about img {
    width: 60%;
    border-radius: 10px;
}

.about-text {
    width: 60%;
	text-align:justify;
}

.about-text h2 {
    font-size: 2rem;
    margin-bottom: 15px;
}

.about-text p {
    font-size: 1.2rem;
    color: #444;
}

/* Footer Section */
footer {
    background-color: #333;
    color: white;
    padding: 30px;
    display: flex;
    justify-content: space-between
    align-items: center;
    gap:150px;
	padding-left:350px;
}

.contact h {
	font-size: 20px;
}
    	
	
.contact p {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.map iframe {
  
    border-radius: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .menu-items {
        flex-direction: column;
    }

    .about-content {
        flex-direction: column;
        align-items: center;
    }

    .about img, .about-text {
        width: 100%;
    }
}
